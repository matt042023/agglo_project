{% extends 'base.html.twig' %}

{% block title %}A propos{% endblock %}

{% block body %}
    <style>
    body{
        background-color: white !important;
    }

    #super_btn {
        margin: 1%;
    }
    #super_btn a{
        text-decoration: none;
    }
    .container{
        margin: 2%;
        text-align: center;
    }
    .container img{
        width: 100%
    }
    .container h1{
        margin-bottom: 2%;
        margin-top: -4%;
    }
    .presentation {
        text-align: justify;
        padding-bottom: 4%;
        padding-top: 2%;
    }
    footer {
        margin-top: 10px;
        padding-top: 10px;
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 50px;
    }

    </style>

    <header>
        {{ include("navbar/navbar.html.twig") }}
    </header>
    
    <button id="super_btn" type="button" class="btn btn-outline-light" class="btn btn-outline-light" style="background-color: #d6a700"><a href="{{ path('app_home') }}">Back</a></button>
    
    <div class="container">
        <div class="title">
            <h1>{{ apropos[0].titleAPropos }}</h1>
        </div>
        <div class="block_img">
            <img src="/images/baniereapropos.jpg" alt=""/>
        </div>

        <div class="card text-white bs-gray-700 text-primary-emphasis" style="max-width: 120rem; height: auto;">
            <div class="presentation" style="margin: 1em;">
                <p>{{ apropos[0].contentAPropos | raw }}</p>
            </div>
        </div>
    </div>
    

    <footer>
        {{ include("footer.html.twig") }}
    </footer>



{% endblock %}
