{% extends "base.html.twig" %}
{% block title %}Accueil{% endblock %}
{% block body %}

<header class="header">
  <nav class="navbar navbar-expand-lg bg-white" data-bs-theme="light" style="box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3), -5px -5px 10px rgba(255, 255, 255, 0.5);">
    <div class="container-fluid">
      <div id="header" class="text-center">
        <a class="logo" href="/">
          <div class="icons">
            <div class="icon-accueil mt-0" href="app_home">
              <img src="/home.png" alt="logo page d'accueil" />
            </div>
          </div>
        </a>
      </div>



      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>



      <div class="collapse navbar-collapse" id="navbar">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item">
            <a class="nav-link active text-dark spaced-link me-5" href="successhistory">HISTOIRES</a>
          </li>

          <li class="nav-item">
            <a class="nav-link text-dark spaced-link me-5 px-5" href="/events">EVENEMENTS</a>
          </li>

          <li class="nav-item">
            <a class="nav-link text-dark spaced-link" href="/resources">RESSOURCES EDUCATIVES</a>
          </li>
           </ul>


        {% if app.user %}
          {% if 'ROLE_ADMIN' in app.user.roles %}
            <a class="btn btn-outline-info btn-sm my-6 my-sm-0 text-light me-3" href="{{ path('admin') }}" role="button">Espace Admin</a>
          {% endif %}
          <a class="logo" href="{{ path('app_dashboard_membre_controller_php') }}">
            <div class="icons">
              <div class="icon-accueil mt-0">
                <img src="/user.png" alt="logo utilisateur" />
              </div>
            </div>
          </a>
        {% else %}

    
          <form class="d-flex">
            <a class="btn btn-secondary btn-sm my-6 my-sm-0 text-dark me-3" href="{{ path('app_login') }}" role="button">Se connecter</a>
            <a class="btn btn-outline-info btn-sm" href="{{ path('app_register') }}" role="button">S'enregistrer</a>
          </form>
          
        {% endif %}
      </div>
    </div>
  </nav>
</header>
{% endblock %}
