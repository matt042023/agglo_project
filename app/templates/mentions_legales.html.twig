{% extends 'base.html.twig' %}

{% block title %}Mentions Légales{% endblock %}

{% block body %}
    <style>
    body{
        background-color: white !important;
    }

    .box {
        background-color: white; 
        margin-top: -2%;  
        margin-left: 10%;
        margin-right: 10%;
        margin-bottom: 7%;
        text-align: center;
    }
    .title {
        text-align: center;
        padding-top: 2%;
    }
    .text{
        text-align: justify;
        padding: 2% 7%;

    }
    footer {
        margin-top: 10px;
        padding-top: 10px;
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 50px;
    }
    #super_btn {
        margin: 2%;
    }
    #super_btn a {
        text-decoration: none;
    }
    </style>

    <header>
        {{ include("navbar/navbar.html.twig") }}
    </header>

    <button id="super_btn" type="button" class="btn btn-outline-light" style="background-color: #d6a700"><a href="{{ path('app_home') }}">Back</a></button>

    <div class="container">
        <div class="title">
            <h1>Mentions Légales</h1>
        </div>

        <div class="card text-white bs-gray-700 text-primary-emphasis" style="max-width: 120rem; height: auto;">
            <div class="presentation" style="margin: 1em;">
                <p>{{mentions.description | raw}}</p>
            </div>
        </div>
    </div>
    <div class="container mb-3" ></div>

    <footer>
        {{ include("footer.html.twig") }}
    </footer>
{% endblock %}